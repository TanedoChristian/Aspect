@page "/admin/orders"

<div class ="flex">
    <SideNav />


    @if (Carts.Count() == 0)
    {
        <h1></h1>
    }
    else
    {

      
        


      
        <div class="flex w-full justify-center">
            <div class="w-full p-5">
                <h1 class="text-2xl font-sans font-bold">Orders</h1>
                <div>
                    <select id="countries" class="bg-gray-50 border border-gray-200 text-gray-900 t focus:ring-blue-500 focus:border-blue-500 block p-2" @onchange="HandleCategory">
                        <option selected value="all">All</option>
                        <option value="pending">Cancel</option>
                        <option value="approved">Approve</option>
                        <option value="done">Done</option>
                    </select>
                    </div>

                <div class="flex w-full justify-center p-5">
                    <div class="w-full flex flex-col bg-white  rounded-md h-[80vh] overflow-y-auto relative border border-gray-200">
                        <table class="text-sm text-left text-gray-500 font-sans">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-200">
                                <tr>

                                    <th scope="col" class="px-6 py-3">
                                        Name
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Quantity
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Price
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Total
                                    </th>
                                    <th scope="col" class="px-6 py-3">

                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="">

                                @foreach (var cart in FilteredCarts)
                                {
                                    <tr class="bg-white border-b text-black">

                                        <th scope="row"
                                            class="flex gap-2  items-center px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                                            @cart.ProductName
                                        </th>
                                        <td class="px-6 py-4">@cart.Quantity</td>
                                        <td class="px-6 py-4">@cart.Price</td>
                                        <td class="px-6 py-4">@($"{cart.Quantity * cart.Price}")</td>
                                        <td class="px-6 py-4 flex gap-3 items-center">

                                            <h1 class="text-gray-600 ">
                                                Status:
                                            </h1>

                                            <select id="countries" class="bg-gray-50 border border-gray-200 text-gray-900 text- rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2" @onchange="HandleSelectedSize">
                                                <option selected>@cart.Status</option>
                                                <option value="pending">Cancel</option>
                                                <option value="approved">Approve</option>
                                                <option value="done">Done</option>
                                            </select>

                                        </td>


                                        <td class="px-6 py-4">
                                            <button class="py-2.5 px-6 bg-blue-500 text-white" @onclick="() => SaveUpdate(cart)">
                                                Save
                                            </button>
                                        </td>


                                    </tr>
                                }


                            </tbody>
                        </table>





                    </div>
                </div>
                </div>>
         



        </div>
    }

</div>

